FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["BEAUTIFY_AUTHORIZATION.API/BEAUTIFY_AUTHORIZATION.API.csproj", "BEAUTIFY_AUTHORIZATION.API/"]
COPY ["BEAUTIFY_AUTHORIZATION.APPLICATION/BEAUTIFY_AUTHORIZATION.APPLICATION.csproj", "BEAUTIFY_AUTHORIZATION.APPLICATION/"]
COPY ["BEAUTIFY_AUTHORIZATION.CONTRACT/BEAUTIFY_AUTHORIZATION.CONTRACT.csproj", "BEAUTIFY_AUTHORIZATION.CONTRACT/"]
COPY ["BEAUTIFY_AUTHORIZATION.PERSISTENCE/BEAUTIFY_AUTHORIZATION.PERSISTENCE.csproj", "BEAUTIFY_AUTHORIZATION.PERSISTENCE/"]
COPY ["BEAUTIFY_AUTHORIZATION.DOMAIN/BEAUTIFY_AUTHORIZATION.DOMAIN.csproj", "BEAUTIFY_AUTHORIZATION.DOMAIN/"]
COPY ["BEAUTIFY_AUTHORIZATION.INFRASTRUCTURE/BEAUTIFY_AUTHORIZATION.INFRASTRUCTURE.csproj", "BEAUTIFY_AUTHORIZATION.INFRASTRUCTURE/"]
COPY ["BEAUTIFY_AUTHORIZATION.PRESENTATION/BEAUTIFY_AUTHORIZATION.PRESENTATION.csproj", "BEAUTIFY_AUTHORIZATION.PRESENTATION/"]
RUN dotnet restore "BEAUTIFY_AUTHORIZATION.API/BEAUTIFY_AUTHORIZATION.API.csproj"
COPY . .
WORKDIR "/src/BEAUTIFY_AUTHORIZATION.API"
RUN dotnet build "BEAUTIFY_AUTHORIZATION.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "BEAUTIFY_AUTHORIZATION.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "BEAUTIFY_AUTHORIZATION.API.dll"]
